.container
  !=flash_handler
  .app-title
    %h1
      =link_to app_name, www_url
  .signin-dialog
    .row
      .span4.offset4
        =form_for :session, url: signin_path, html: {class: 'form-signin'} do |f|
          .fieldset
            %legend Welcome back
            .control-group
              .controls
                .input-prepend
                  %span.add-on
                    %i.icon-envelope-alt
                  =f.text_field :email, class: 'span2', id: 'inputIcon', placeholder: 'Email'
            .control-group
              .controls
                .input-prepend
                  %span.add-on
                    %i.icon-key
                  =f.password_field :password, class: 'span2', id: 'inputIcon', placeholder: 'Password'
            .control-group
              %label.control-label
              .controls
                =button_tag 'Sign In', class: 'btn btn-primary', 'data-disable-with' => 'Saving ...'
    .row
      .span6.offset4
        %p
          You don't have an account?
          =link_to 'Sign up now!', signup_path
-#= render 'pages/footer'
