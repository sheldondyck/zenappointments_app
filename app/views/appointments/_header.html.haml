-# TODO: calling function on @date (through send) that came from the net. Things that make you go hmmm.
.view-header
  .view-header-quick-nav
    -#=remote_link_icon_to 'calendar', '#'
    -# TODO Add today button?
    =remote_link_icon_to 'angle-left', appointments_path(date: @date.send('prev_' + @view), view: @view)
    =remote_link_icon_to 'angle-right', appointments_path(date: @date.send('next_' + @view), view: @view)

  .view-header-title
    =@nav_title

  -#%h3
    =@nav_title

  .view-header-selector
    .btn-group{id: 'calendar-selector', data: {toggle: 'buttons-radio'}}
      =link_to 'Day', appointments_path(view: 'day'), {alt: 'Day', id: 'link-day', class: 'btn btn-default', data: {remote: 'true'}}
      =link_to 'Week', appointments_path(view: 'week'), {alt: 'Week', id: 'link-week', class: 'btn btn-default', data: {remote: 'true'}}
      =link_to 'Month', appointments_path(view: 'month'), {alt: 'Month', id: 'link-month', class: 'btn btn-default', data: {remote: 'true'}}
      =link_to 'Year', appointments_path(view: 'year'), {alt: 'Year', id: 'link-year', class: 'btn btn-default', data: {remote: 'true'}}
