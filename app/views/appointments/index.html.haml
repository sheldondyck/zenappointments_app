=render 'layouts/menu'
.main
  #view_selector
    .btn-group{id: 'calendar-selector', data: {toggle: 'buttons-radio'}}
      =link_to 'Day', appointments_path(view: 'day'), {alt: 'Day', id: 'link-day', class: 'btn', data: {remote: 'true'}}
      =link_to 'Week', appointments_path(view: 'week'), {alt: 'Week', id: 'link-week', class: 'btn', data: {remote: 'true'}}
      =link_to 'Month', appointments_path(view: 'month'), {alt: 'Month', id: 'link-month', class: 'btn', data: {remote: 'true'}}
      =link_to 'Year', appointments_path(view: 'year'), {alt: 'Year', id: 'link-year', class: 'btn', data: {remote: 'true'}}
  #appointments
    =render @view
